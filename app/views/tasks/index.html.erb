<h1>タスクリスト一覧</h1>

<% if @tasks.any? %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>タスク</th>
                <th>ステータス</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @tasks.each do |task| %>
                <tr>
                    <td><%= link_to task.id, task %></td>
                    <td><%= task.content %></td>
                    <td><%= task.status %></td>
                    <td><% if current_user == task.user %>
                            <%= link_to "Delete", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %></td>
                        <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div>
        <%== pagy_bootstrap_nav(@pagy) %>
    </div>
<% end %>

<%= link_to '新規タスクの投稿', new_task_path, class: "btn btn-primary" %>